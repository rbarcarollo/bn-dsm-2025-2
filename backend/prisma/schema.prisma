generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Nomes de model no Prisma devem estar
// no singular e iniciar com LetraMaiúscula
model Categoria {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  descricao   String
}

model Cliente {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  nome              String
  cpf               String    @unique     // Não pode se repetir na coleção
  data_nascimento   DateTime? // opcional
  email             String    @unique
  logradouro        String    
  num_imovel        String
  complemento       String?   // opcional
  bairro            String
  municipio         String
  uf                String
  cep               String
  celular           String
  pedidos           Pedido[]
}

model Fornecedor {
  id                String        @id @default(auto()) @map("_id") @db.ObjectId
  razao_social      String
  nome_fantasia     String?
  cnpj              String        @unique
  email             String        @unique
  logradouro        String
  num_casa          String
  complemento       String?
  bairro            String
  municipio         String
  uf                String
  cep               String
  celular           String
}

model Pedido {
  id                String        @id @default(auto()) @map("_id") @db.ObjectId
  num_pedido        Int           @unique
  data_hora         DateTime      @default(now())
  cliente_id        String        @db.ObjectId
  cliente           Cliente       @relation(fields: [cliente_id], references: [id])
}


